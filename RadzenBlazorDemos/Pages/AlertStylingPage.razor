@page "/alert-styling"

<RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1" Class="my-4">
    Alert Styling
</RadzenText>

<RadzenExample Name="AlertStyling" Heading="false" Documentation="false">
    <RadzenCard Class="mt-4 w-100 mb-4 d-flex flex-column" style="gap: 1rem;">
        <div class="d-flex align-items-center">
            <RadzenLabel Text="AlertStyle:" Style="margin-right: 8px; width: 5rem;" />
            <RadzenSelectBar @bind-Value="@alertStyle" TextProperty="Text" ValueProperty="Value" Data="@(Enum.GetValues(typeof(AlertStyle)).Cast<AlertStyle>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" Class="d-none d-xl-flex" />
            <RadzenDropDown @bind-Value="@alertStyle" TextProperty="Text" ValueProperty="Value" Data="@(Enum.GetValues(typeof(AlertStyle)).Cast<AlertStyle>().Select(t => new { Text = $"{t}", Value = t }))" Class="d-inline-flex d-xl-none" />
        </div>
        <div class="d-flex align-items-center">
            <RadzenLabel Text="Size:" Style="margin-right: 8px; width: 5rem;" />
            <RadzenSelectBar @bind-Value="@size" TextProperty="Text" ValueProperty="Value" Data="@(Enum.GetValues(typeof(AlertSize)).Cast<AlertSize>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </div>
        <div class="d-flex align-items-center">
            <RadzenLabel Text="Variant:" Style="margin-right: 8px; width: 5rem;" />
            <RadzenSelectBar @bind-Value="@variant" TextProperty="Text" ValueProperty="Value" Data="@(Enum.GetValues(typeof(Variant)).Cast<Variant>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </div>

        <RadzenAlert Variant="Variant.Flat" AlertStyle="AlertStyle.Warning" Icon="info_outline" Shade="Shade.Lighter" Size="AlertSize.Small" AllowClose=false>
            Base, Light and Dark alert styles don't have Shades
        </RadzenAlert>
    </RadzenCard>
    <RadzenAlert Variant="@variant" AlertStyle="@alertStyle" Size="@size" Shade="Shade.Lighter" AllowClose=false>
        Alert Shade Lighter
    </RadzenAlert>
    <RadzenAlert Variant="@variant" AlertStyle="@alertStyle" Size="@size" Shade="Shade.Light" AllowClose=false>
            Alert Shade Light
    </RadzenAlert>
    <RadzenAlert Variant="@variant" AlertStyle="@alertStyle" Size="@size" AllowClose=false>
        Alert Shade Default
    </RadzenAlert>
    <RadzenAlert Variant="@variant" AlertStyle="@alertStyle" Size="@size" Shade="Shade.Dark" AllowClose=false>
        Alert Shade Dark
    </RadzenAlert>
    <RadzenAlert Variant="@variant" AlertStyle="@alertStyle" Size="@size" Shade="Shade.Darker" AllowClose=false>
        Alert Shade Darker
    </RadzenAlert>
</RadzenExample>

@code {
    Variant variant = Variant.Filled;
    AlertSize size = AlertSize.Medium;
    AlertStyle alertStyle = AlertStyle.Primary;
}