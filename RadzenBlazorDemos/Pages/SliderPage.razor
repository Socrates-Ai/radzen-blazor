@page "/slider"
@using System.Collections
<RadzenExample Name="Slider">
<div class="container-fluid">
    <div class="row px-3">
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Slider from 0 to 100</RadzenText>
                <RadzenSlider @bind-Value=@value TValue="int" Min="0" Max="100" Change=@(args => OnChange(args, "Slider from 0 to 100")) Class="w-100" />
            </RadzenCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Slider from -100 to 100</RadzenText>
                <RadzenSlider @bind-Value=@negativeValue TValue="int" Min="-100" Max="100" Change=@(args => OnChange(args, "Slider from -100 to 100")) Class="w-100" />
            </RadzenCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Slider with Step 10</RadzenText>
                <RadzenSlider @bind-Value=@valueWithStep TValue="int" Step="10" Change=@(args => OnChange(args, "Slider with Step 10")) Class="w-100" />
            </RadzenCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Range Slider</RadzenText>
                <RadzenSlider Range="true" @bind-Value=@values TValue="IEnumerable<int>" Change=@(args => OnChange(args, "Range Slider")) Class="w-100" />
            </RadzenCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Range Slider with negative values</RadzenText>
                <RadzenSlider Range="true" @bind-Value=@negativeValues Min="-100" Max="100" TValue="IEnumerable<int>" Change=@(args => OnChange(args, "Range Slider with negative values")) Class="w-100" />
            </RadzenCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Disabled Slider</RadzenText>
                <RadzenSlider Disabled="true" @bind-Value=@value TValue="int" Min="0" Max="100" Change=@(args => OnChange(args, "Slider from 0 to 100")) Class="w-100" />
            </RadzenCard>
        </div>
    </div>
</div>
</RadzenExample>

<EventConsole @ref=@console Class="mt-4" />

@code {
    IEnumerable<int> values = new int[] { 14, 78 };
    IEnumerable<int> negativeValues = new int[] { -100, 100 };
    int value = 67;
    int negativeValue = 0;
    int valueWithStep = 30;

    EventConsole console;

    void OnChange(dynamic value, string name)
    {
        var str = value is IEnumerable ? string.Join(", ", value) : value;
        console.Log($"{name} value changed to {str}");
    }
}